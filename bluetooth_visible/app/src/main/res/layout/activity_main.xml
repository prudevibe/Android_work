<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/button_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:clickable="true"
            android:onClick="on"
            android:padding="15dp"
            android:text="Turn On" />

        <Button
            android:id="@+id/button_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"
            android:layout_toRightOf="@+id/button_on"
            android:onClick="visible"
            android:text="Get visible" />

        <Button
            android:id="@+id/list_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_on"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="0dp"
            android:onClick="list"
            android:text="list_devices" />

        <Button
            android:id="@+id/button_bOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_visible"
            android:layout_marginLeft="121dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/list_devices"
            android:onClick="off"
            android:text="turn_off"
            android:layout_marginStart="121dp" />

    </RelativeLayout>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pairedView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="paired_devices"
        android:id="@+id/Paired_list"
        android:textColor="#ff34ff06"
        android:textSize="25sp"
        />




</LinearLayout>